{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "target": "es2015",
    "allowJs": true,
    "jsx": "react",
    "module": "es2015",
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom",
      "es2016.array.include",
      "es2017.object"
    ]
  },
  "compileOnSave":false,
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules/ws/lib/*"
  ]
}
